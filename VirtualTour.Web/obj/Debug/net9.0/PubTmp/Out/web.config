<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Giữ nguyên cấu hình gốc -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\fKVPortalAspireWeb.Web.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
      <!-- Bật WebSocket -->
      <webSocket enabled="true" />
      <!-- Tăng timeout để giữ kết nối lâu hơn -->
      <aspNetCore requestTimeout="00:30:00" />
      <!-- Cho phép request lớn hơn nếu cần -->
      <security>
        <requestFiltering>
          <requestLimits maxAllowedContentLength="2147483647" />
        </requestFiltering>
      </security>
      <!-- Ngăn IIS đóng kết nối khi idle -->
      <serverRuntime uploadReadAheadSize="1048576" />
      <!-- Bỏ giới hạn buffer, tùy chọn CORS -->
      <httpProtocol>
        <customHeaders>
          <!-- Nếu cần cho phép truy cập từ domain khác -->
          <!-- <add name="Access-Control-Allow-Origin" value="*" /> -->
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
</configuration>
